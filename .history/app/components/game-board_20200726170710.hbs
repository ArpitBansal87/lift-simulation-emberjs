{{yield}}
<div >
  {{!-- test Game Board --}}
  {{#each this.board as |item index|}}
    <Floor @level={{item.floorLevel}}>
      {{#if item.hasLift }}
       <div class="lift-container">
       <Lift @liftNumber ={{item.currentLift}}/>

       </div> 
      {{/if}}
      <div class="button-container">

      {{#if (is-edge-index this.board.length index 'up')}}
        <button class="btn-up" type="button"  {{on "click" (fn this.buttonPressed 'up' item.floorLevel)}}>Up</button>
      {{/if}}
      {{#if (is-edge-index this.board.length index 'down')}}
        <button class="btn-down" type="button" {{on "click" (fn this.buttonPressed 'down' item.floorLevel)}}>Down</button>
      {{/if}}
      </div>
    </Floor>
  {{/each}}
</div>